{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentWidth": 4,
		"lineWidth": 80
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
